{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "main",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.cpp",
                "-I/usr/local/include/opencv4/",
                "-I/usr/local/include/opencv4/opencv2/",
                "-L/usr/local/lib",
                "/usr/local/lib/libopencv_*",
                "-o",
                "${workspaceFolder}/build/main",

            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}